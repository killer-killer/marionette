<div class="row">
    <div class="col-xs-12">
        <h2 class="page-header">Create Contact</h2>
        <form role="form" class="form-horizontal contact-form" id="contactForm">
            <div class="form-group">
                <label class="col-sm-4 control-label">Full name:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control contact-name-input" value="{{this.data.attributes.name}}" name="name"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Email address:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control contact-email-input" value="{{this.data.attributes.email}}" name="email"/>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-4 control-label">Telephone number:</label>
                <div class="col-sm-6">
                    <input type="text" class="form-control contact-tel-input" value="{{this.data.attributes.tel}}" name="tel"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-4 col-sm-3">
                    <button id="contactSubmit" type="submit" class="btn btn-success btn-lg btn-block">Submit</button>
                </div>
                <div class="col-sm-3">
                    <button id="cancel" class="btn btn-danger btn-lg btn-block">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>
